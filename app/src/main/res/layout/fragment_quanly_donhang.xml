<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_200"
    tools:context=".QuanLy.Fragment.khohangFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayoutdonhang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@color/purple_200"
        app:tabIndicatorColor="@color/purple_200"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <com.example.yqhd_app.QuanLy.TabFragment.customViewPager
        android:id="@+id/viewpagerdonhang"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        app:layout_constraintTop_toBottomOf="@id/tablayoutdonhang"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>