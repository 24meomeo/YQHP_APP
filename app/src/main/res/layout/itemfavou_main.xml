        android:background="@drawable/ic_favourite"
        android:scaleType="fitCenter"
        android:visibility="visible"
        android:button="@null"
        app:layout_constraintTop_toBottomOf="@id/itvote"
        app:layout_constraintLeft_toLeftOf="parent"
