<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuanLy.ThemSanPhamActivity">
    <Button
        android:id="@+id/btnXacNhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/imgSP"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/roundnotselect"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageButton
        android:id="@+id/imgbtSPChange"
        android:layout_width="36dp"
        android:layout_height="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="140dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/imagegallery"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <LinearLayout
        android:id="@+id/layoutAddInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgSP">
        <EditText
            android:id="@+id/edtTenSP"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:hint="Tên sản phẩm"
            android:textColor="@color/black"
            android:background="@drawable/edtbackground"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"/>
        <EditText
            android:id="@+id/edtLoaiSP"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:background="@drawable/edtbackground"
            android:hint="Loại"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/edtGiaSP"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:hint="Giá"
            android:background="@drawable/edtbackground"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"/>
        <EditText
            android:id="@+id/edtMoTa"
            android:layout_width="330dp"
            android:layout_height="100dp"
            android:hint="Mô tả"
            android:background="@drawable/edtbackground"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginBottom="15dp"
            android:gravity="top"
            android:paddingTop="10dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnCapNhat"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Thêm"
        android:textColor="@color/white"
        android:background="@drawable/roundcake"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutAddInfo"
        app:layout_constraintRight_toLeftOf="@id/btnHuy"/>

    <Button
        android:id="@+id/btnHuy"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/roundcake"
        android:text="Hủy"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btnCapNhat"
        app:layout_constraintTop_toBottomOf="@id/layoutAddInfo" />
</androidx.constraintlayout.widget.ConstraintLayout>